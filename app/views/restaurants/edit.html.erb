<div class="row pageHead">
    <h1>Editing Restaurant</h1>
</div>
<div class="col-6 col-centered">
    <div class="formHeight">
        <div class="formBox form-group">
            <%= render 'form', restaurant: @restaurant %>
        </div>
        <div class="row justify-content-end formPageBtns">
            <button type="button" class="btn btn-success text-white form-group">
                <i class="fa fa-window-maximize" aria-hidden="true"></i>
                <%= link_to '  SHOW', @restaurant, class: 'text-white' %>
            </button>
            <button type="button" class="btn btn-danger text-white form-group btnLefttMar">
                <i class="fa fa-times" aria-hidden="true"></i>
                <%= link_to '  CLOSE', restaurants_path, class: 'text-white' %>
            </button>
        </div>
    </div>
</div>