<h1>Editing Restaurant</h1>

<%= render 'form', restaurant: @restaurant %>

<button type="button" class="btn btn-default btn-lg">
    <%= link_to @restaurant do %>
    <i class="fa fa-window-maximize text-success" aria-hidden="true"> Show</i>    
    <% end %>  
</button>

<button type="button" class="btn btn-default btn-lg">
    <%= link_to restaurants_path do %>
    <i class="fa fa-times text-danger" aria-hidden="true"> Close</i>
    <% end %>  
</button>
