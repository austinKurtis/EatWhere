<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">Description</th>
      <th scope="col">Phone</th>
      <th scope="col">Price</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr scope="row">
        <td><%= restaurant.restaurant_name %></td>
        <td><%= restaurant.restaurant_location %></td>
        <td><%= restaurant.restaurant_desc %></td>
        <td><%= restaurant.restaurant_phone %></td>
        <td><%= restaurant.restaurant_price %></td>
        <td>
          <%= link_to '   Show   ', restaurant, class: 'fa fa-window-maximize text-success' %>
          <%= link_to '   Edit   ', edit_restaurant_path(restaurant), class: 'fa fa-pencil-square-o text-warning' %>
          <%= link_to '   Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-times text-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '    New Restaurant', new_restaurant_path, class: 'fa fa-calendar-plus-o text-success' %>
