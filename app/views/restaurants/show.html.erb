<div class="row pageHead">
  <p id="notice"><%= notice %></p>
  <div class="col d-flex justify-content-start">
    <h1><%= @restaurant.restaurant_name %></h1>
  </div>
  <div class="col d-flex justify-content-end">
      <button type="button" class="btn closebtn text-white">
              <i class="fa fa-times" aria-hidden="true"></i>
              <%= link_to '  CLOSE', restaurants_path, class: 'text-white' %>
      </button>
  </div>
</div>
<div class="col-12">
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col" class="text-center">Location</th>
        <th scope="col" class="text-center">Description</th>
        <th scope="col" class="text-center">Phone</th>
        <th scope="col" class="text-center">Price</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr scope="row">
        <td class="text-center"><%= @restaurant.restaurant_location %></td>
        <td class="text-center"><%= @restaurant.restaurant_desc %></td>
        <td class="text-center"><%= @restaurant.restaurant_phone %></td>
        <td class="text-center"><%= @restaurant.restaurant_price %></td>
        <td>
          <button type="button" class="btn btn-warning text-black">
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
              <%= link_to '  EDIT', edit_restaurant_path(@restaurant), class: 'text-black' %>
            </button>
        </td>
      </tr>
    </tbody>
  </table>
</div>
