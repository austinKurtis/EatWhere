<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Event Name</th>
      <th scope="col">Event Date</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr scope="row">
        <td><%= event.event_name %></td>
        <td><%= (event.event_time).strftime('%b %e, %l:%M %p') %></td>
        <td>
          <%= link_to '   Show   ', event, class: 'fa fa-window-maximize text-success' %>
          <% if( event.user_id == current_user.id) %>
            <%= link_to '   Edit   ', edit_event_path(event), class: 'fa fa-pencil-square-o text-warning' %>
            <%= link_to '   Destroy   ', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-times text-danger' %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '    Create New Event', new_event_path, class: 'fa fa-calendar-plus-o text-success' %>
