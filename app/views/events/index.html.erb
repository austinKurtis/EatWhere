<div class="row pageHead">
<p id="notice"><%= notice %></p>
<h1>Events</h1>
</div>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col" class="text-center">EVENT NAME</th>
      <th scope="col" class="text-center">EVENT DATE</th>
      <th scope="col" class="text-center"></th>
      <th scope="col" class="text-center"></th>
      <th scope="col" class="text-center"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr scope="row">
        <td class='text-center'><%= event.event_name %></td>
        <td class='text-center'><%= (event.event_time).strftime('%b %e, %l:%M %p') %></td>
        <td class='text-right'>
            <button type="button" class="btn btn-success text-white">
              <i class="fa fa-window-maximize" aria-hidden="true"></i>
              <%= link_to '  SHOW', event, class: 'text-white' %>
            </button>
        </td>
          <% if( event.user_id == current_user.id) %>
        <td class='text-center'>
            <button type="button" class="btn btn-warning text-black">
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
              <%= link_to '  EDIT', edit_event_path(event), class: 'text-black' %>
            </button>
          </td>
          <td class='text-left'>
            <button type="button" class="btn btn-danger text-white">
              <i class="fa fa-times" aria-hidden="true"></i>
              <%= link_to '  DELETE', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-white' %>
            </button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% puts DateTime.now%>