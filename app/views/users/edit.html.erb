<h1>Editing User</h1>

<%= render 'form', user: @user %>

<button type="button" class="btn btn-default btn-lg">
    <%= link_to @user do %>
        <i class="fa fa-window-maximize text-success" aria-hidden="true"> Show</i>    
    <% end %>  
</button>
<button type="button" class="btn btn-default btn-lg">
    <%= link_to root_path do %>
        <i class="fa fa-times text-danger" aria-hidden="true"> Close</i>
    <% end %>  
</button>
